<div class="well">
  <ul class="nav nav-pills">
    <li class="active"><a href="#ftype-1" data-toggle="tab">一次完成</a></li>
    <li><a href="#ftype-2" data-toggle="tab">不固定次数自己控制进度</a></li>
    <li><a href="#ftype-3" data-toggle="tab">在一段时间内完成多次</a></li>
    <li><a href="#ftype-4" data-toggle="tab">从一种状态到另外一种状态</a></li>
  </ul>
  <form class="tab-content form-horizontal" id="f-type-select">
    <div class="tab-pane fade active in" id="ftype-1">
      <div class="control-group">
        <label class="control-label">设置的参数</label>
        <div class="controls">
          <input name="name" type="hidden" value="times">
          <div class="input-prepend"><span class="add-on">标题</span><input name="title" type="text"></div>
          <div class="input-prepend"><span class="add-on">times的值</span><input name="default" type="text" value="1" readonly></div>
          <div class="input-prepend"><span class="add-on">times是否隐藏</span><input name="hide" type="checkbox" checked></div>
        </div>
      </div>
    </div>

    <div class="tab-pane fade" id="ftype-2">
      <div class="control-group">
        <label class="control-label">设置参数</label>
        <div class="controls">
          <input name="name" type="hidden" value="times">
          <div class="input-prepend"><span class="add-on">标题</span><input name="title" type="text"></div>
          <div class="input-prepend"><span class="add-on">times的值</span><input name="default" type="text" value="0" readonly></div>
          <div class="input-prepend"><span class="add-on">times是否隐藏</span><input name="hide" type="checkbox" checked></div>
        </div>
      </div>
    </div>

    <div class="tab-pane fade" id="ftype-3">
      <div class="control-group">
        <label class="control-label">设置参数</label>
        <div class="controls">
          <input name="name" type="hidden" value="times">
          <div class="input-prepend"><span class="add-on">标题</span><input name="title" type="text"></div>
          <div class="input-prepend"><span class="add-on">times的值</span><input name="default" type="text" value="1"></div>
          <div class="input-prepend"><span class="add-on">times是否隐藏</span><input name="hide" type="checkbox"></div>
        </div>
      </div>
    </div>


    <div class="tab-pane fade" id="ftype-4">
      <div class="control-group">
        <label class="control-label">设置起始参数</label>
        <div class="controls">
          <input name="name" type="hidden" value="from">
          <div class="input-prepend"><span class="add-on">起始状态标题</span><input name="title" type="text"></div>
          <div class="input-prepend"><span class="add-on">起始状态默认值</span><input name="default" type="text"></div>
          <div class="input-prepend"><span class="add-on">默认值是否隐藏</span><input name="hide" type="checkbox"></div>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">设置的目标参数</label>
        <div class="controls">
          <input name="name" type="hidden" value="to">
          <div class="input-prepend"><span class="add-on">目标状态标题</span><input name="title" type="text"></div>
          <div class="input-prepend"><span class="add-on">目标状态默认值</span><input name="default" type="text"></div>
          <div class="input-prepend"><span class="add-on">默认值是否隐藏</span><input name="hide" type="checkbox"></div>
        </div>
      </div>
    </div>

  </form>
</div>

<%= form_for(@ftype, :html => {:id => "f-ftype"}) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :catalog %>
    <%= f.number_field :catalog %>
  </div>
  <div class="field">
    <%= f.label :show %>
    <%= f.number_field :show %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => 5 %>
  </div>
  <div class="actions">
    <a class="btn submit" href="javascript:">提交</a>
  </div>
<% end %>
